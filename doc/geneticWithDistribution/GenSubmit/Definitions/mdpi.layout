Format 66
Columns		1
Sides		1
SecNumDepth	3
TocDepth	3
DefaultStyle	Standard

DefaultFont
  Family	Roman
  Series	Medium
  Shape		Up
  Size		Normal
  Color		None
EndFont

Style Standard
  Category	MainText
  Margin	Static
  LatexType	Paragraph
  LatexName	dummy
  ParIndent	MM
  ParSkip	0.4
  Align		Block
  AlignPossible	Block, Left, Right, Center
  LabelType	No_Label
End

Input stdfloatnames.inc

Float
  Type		table
  GuiName	Table
  Placement	tbp
  Extension	lot
  NumberWithin	none
  Style		plain
  ListName	"List of Tables"
  IsPredefined	true
  UsesFloatPkg	false
  ListCommand	listoftables
  RefPrefix	tab
End

Float
